{
  "name": "valtism.github.io",
  "version": "1.0.0",
  "description": "The personal blog of Dan Wood (@valtism)",
  "main": "index.js",
  "scripts": {
    "start": "npm run tailwind & npm run serve",
    "serve": "live-server . --wait=200 --watch='./index.html','./src/**/*.html','./src/**/*.js'",
    "tailwind": "tailwind build -i src/tailwind.src.css -o src/style.css --watch",
    "build": "tailwind build -i src/tailwind.src.css -o src/style.css --env production"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/valtism/valtism.github.io.git"
  },
  "keywords": [
    "blog"
  ],
  "author": "Dan Wood",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/valtism/valtism.github.io/issues"
  },
  "homepage": "https://github.com/valtism/valtism.github.io#readme",
  "dependencies": {
    "@tailwindcss/typography": "^0.4.1",
    "autoprefixer": "^10.2.6",
    "live-server": "^1.2.1",
    "postcss-cli": "^8.3.1",
    "tailwindcss": "^2.2.0-canary.14"
  }
}
